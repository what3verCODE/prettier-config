{
    "name": "@what3vercode/prettier-config",
    "type": "module",
    "version": "0.0.0",
    "private": false,
    "description": "Fork of Matthew Zito's prettier config",
    "author": "Aleksandr Nokhrin <nokhrin.alni@gmail.com> (https://github.com/what3vercode/)",
    "license": "MIT",
    "homepage": "https://github.com/what3vercode/eslint-config",
    "keywords": [
        "prettier",
        "prettier-config"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rslib build",
        "lint": "eslint .",
        "preformatting": "pnpm build",
        "formatting": "prettier . --check",
        "typecheck": "tsc --noEmit",
        "prepare": "simple-git-hooks"
    },
    "peerDependencies": {
        "@prettier/plugin-xml": "^3.4.1",
        "prettier": "^3.6.2",
        "prettier-plugin-nginx": "^1.0.3",
        "prettier-plugin-properties": "^0.3.0",
        "prettier-plugin-sh": "^0.15.0",
        "prettier-plugin-solidity": "^1.4.2",
        "prettier-plugin-sql": "^0.18.1",
        "prettier-plugin-toml": "^2.0.2"
    },
    "peerDependenciesMeta": {
        "@prettier/plugin-xml": {
            "optional": true
        },
        "prettier-plugin-nginx": {
            "optional": true
        },
        "prettier-plugin-properties": {
            "optional": true
        },
        "prettier-plugin-sh": {
            "optional": true
        },
        "prettier-plugin-solidity": {
            "optional": true
        },
        "prettier-plugin-sql": {
            "optional": true
        },
        "prettier-plugin-toml": {
            "optional": true
        }
    },
    "devDependencies": {
        "@exbotanical/eslint-config": "^1.0.1",
        "@rslib/core": "^0.15.0",
        "@total-typescript/ts-reset": "^0.6.1",
        "@tsconfig/strictest": "^2.0.6",
        "bumpp": "^10.0.3",
        "eslint": "^9.37.0",
        "jiti": "^2.4.2",
        "lint-staged": "^15.4.3",
        "simple-git-hooks": "^2.11.1",
        "typescript": "^5.8.2"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": [
            "eslint . --fix",
            "prettier . --write"
        ]
    }
}
